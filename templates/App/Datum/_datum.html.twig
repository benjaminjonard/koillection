<div {% if template is defined %} data-template="{{ template.name }}"{% endif %} class="datum row">
    <div class="col s12 l10 offset-l1 xl6 offset-xl3">
        <div class="col s1 handle icon-holder handle">
            <i class="fa fa-arrows-v fa-fw"></i>
        </div>

        <div class="input-field col s1 label hide-on-med-and-down hidden">
            <span class="complementary-color">{{ ('label.' ~ type)|trans }}</span>
            <input type="hidden" id="data_{{ iteration }}_type" name="{{ entity }}[data][{{ iteration }}][type]" length="255" value="{{ type }}">
        </div>

        <div class="input-field input-field col s5 itemLabel">
            <input type="text" id="data_{{ iteration }}_label" name="{{ entity }}[data][{{ iteration }}][label]" length="255" {% if datum is defined %}value="{{ datum.label }}"{% elseif label is defined %}value="{{ label }}"{% endif %}>
            <label for="data_{{ iteration }}_label" class="required {% if label is defined or datum is defined %}active{% endif %}">{{ 'label.label'|trans }}</label>
        </div>

        {{ include('App/Datum/_' ~ type ~'.html.twig') }}

        <div class="col s1 icon-holder">
            <i class="fa fa-remove fa-fw removeDatum"></i>
        </div>

        <div class="input-field">
            <input class="position" type="hidden" id="data_{{ iteration }}_position" name="{{ entity }}[data][{{ iteration }}][position]" length="255" {% if datum is defined %}value="{{ datum.position }}"{% endif %}>
        </div>
    </div>
</div>
