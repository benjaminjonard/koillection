{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_tag_index', 'trans': 'menu.tags'}]) %}

{% block title %}
    {{ renderTitle(breadcrumb)  }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb)  }}
{% endblock %}

{% block meta %}
    {% if context == 'shared'  %}
        {{ include('App/_partials/_meta.html.twig', {
            'title': renderTitle(breadcrumb),
            'description': 'menu.collections_shared'|trans({'%username%':  app.request.get('username')}),
        }) }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block content %}
    <div {{ stimulus_controller('filter-ajax') }}>
        <div class="collection-header">
            <div class="title-block">
                <h1>{{ 'menu.tags'|trans }}</h1>
                <ul class="nav nav-pills">
                    <li>{{ 'counter.tag'|trans({'%count%': tagsCount}) }}</li>
                </ul>
            </div>

            <div></div>

            <div class="btn-holder">
                <div class="left">
                    {% if context == 'default' %}
                        <a href="{{ path('app_tag_category_index') }}" class="button" title="{{ 'tooltip.manage_tag_categories'|trans }}">
                            <i class="fa fa-gears fa-fw"></i>
                        </a>
                        <i data-target="modal-share" class="button btn-share modal-trigger fa fa-share fa-fw" title="{{ 'tooltip.share'|trans }}"></i>
                        {{ include('App/_partials/_visibility.html.twig') }}
                    {% endif %}
                </div>
                <div class="right">
                    {{ form_start(form, {attr: {"data-filter-ajax-target": "form"}}) }}
                        {{ form_row(form.term, {'attr': {
                            'class': 'filter-input',
                            'data-action': 'keyup->filter-ajax#filter' ,
                            'placeholder': 'filter.by_name'|trans,
                            'autocomplete': 'off'
                        }}) }}
                    {{ form_end(form) }}
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="content-block" data-filter-ajax-target="content">
            <div class="right">
                <button data-target="delete" class="btn waves-effect waves-light modal-trigger">{{ 'btn.delete_unused_tags'|trans }}</button>
            </div>

            {{ include('App/Tag/_tags_table.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block modals %}
    {% if context == 'default' %}
        {{ include('App/_partials/_modal/_share.html.twig', {'route': url('app_shared_tag_index', {username: app.user.username})}) }}
        {{ include('App/_partials/_modal/_delete.html.twig', {'id': 'delete', 'route': path('app_tag_delete_unused_tags'), transKey: 'message.delete.unused_tag'}) }}
    {% endif %}
{% endblock %}

